<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bg1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Foundation Logo -->
            <ImageView
                android:id="@+id/logoImage"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/img_1"
                android:layout_marginBottom="16dp"
                android:contentDescription="Soham Foundation Logo" />

            <!-- Foundation Name -->
            <TextView
                android:id="@+id/foundationName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Soham Foundation"
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="#1E3A8A"
                android:layout_marginBottom="10dp" />

            <!-- Address -->
            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shop No 1, Sai Palace,\nOpp. Century Rayon Hospital,\nUlhasnagar, Maharashtra - 421103"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#555555"
                android:gravity="center"
                android:layout_marginBottom="18dp" />

            <!-- Description -->
            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Soham Foundation  is a voluntary organization by the peoples for the peoples which is dedicated for  the overall development of entire society providing support for education to depressed and needy children’s , provide health care to the underprivileged portion of the society.
Soham Foundation committed for betterment of the life of children in remote and unattended part of societies. It is our observation; there is lots of work needs to be done in the outskirts of the cities, i.e.in Rural area small towns, Adivashi pada’s"
                android:textSize="16sp"
                android:textColor="#444444"
                android:lineSpacingExtra="5dp"
                android:layout_marginBottom="16dp"
                android:textStyle="bold" />

            <!-- Core Values -->
            <TextView
                android:id="@+id/valuesTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Our Core Values"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#1F2937"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/coreValues"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Compassionate Service\n• Inclusive Growth\n• Community Empowerment\n• Transparency &amp;  Trust\n• Sustainable Impact"
                android:textSize="15sp"
                android:textColor="#07FD00"
                android:layout_marginBottom="18dp" />

            <!-- Call to Action -->
            <TextView
                android:id="@+id/cta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Together, we can create hope and opportunities. Join us in building a better tomorrow."
                android:textSize="15sp"
                android:textStyle="italic"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:layout_marginBottom="20dp" />

            <!-- Contact -->
            <TextView
                android:id="@+id/contactTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact Us"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#1F2937"
                android:layout_marginBottom="6dp" />

            <TextView
                android:id="@+id/contactDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email: sohamfoundation2015@gmail.com\nPhone: +91 77383 56103\nWebsite: www.sohamfoundationngo.org"
                android:autoLink="all"
                android:linksClickable="true"
                android:textSize="15sp"
                android:textColor="#07FD00"
                android:gravity="center"
                android:layout_marginBottom="20dp" />
        </LinearLayout>
    </ScrollView>

    <!-- Footer Navigation -->
    <include
        layout="@layout/footernav"
        android:layout_width="match_parent"
        android:layout_height="68dp" />
</LinearLayout>
