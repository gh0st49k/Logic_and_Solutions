<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bg1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Logo -->
            <ImageView
                android:id="@+id/logoImage"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/img_1"
                android:layout_marginBottom="16dp"
                android:contentDescription="Soham Foundation Logo" />

            <!-- Name -->
            <TextView
                android:id="@+id/foundationName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Soham Foundation"
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="10dp" />

            <!-- Address -->
            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shop No 1, Sai Palace,\nOpp. Century Rayon Hospital,\nUlhasnagar, Maharashtra - 421103"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#E0E0E0"
                android:gravity="center"
                android:layout_marginBottom="18dp" />

            <!-- Description -->
            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Soham Foundation is a voluntary organization by the people for the people, dedicated to the overall development of society. We provide educational support to underprivileged children and healthcare access to marginalized communities.\n\nWe aim to uplift rural, tribal, and overlooked populations with sustainable initiatives for long-term change."
                android:textSize="16sp"
                android:textColor="#F1F1F1"
                android:lineSpacingExtra="5dp"
                android:layout_marginBottom="16dp"
                android:textStyle="normal" />

            <!-- Core Values -->
            <TextView
                android:id="@+id/valuesTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Our Core Values"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#FFEB3B"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/coreValues"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Compassionate Service\n• Inclusive Growth\n• Community Empowerment\n• Transparency and Trust\n• Sustainable Impact"
                android:textSize="15sp"
                android:textColor="#B2FF59"
                android:layout_marginBottom="18dp" />

            <!-- Call to Action -->
            <TextView
                android:id="@+id/cta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Together, we can create hope and opportunities.\nJoin us in building a better tomorrow."
                android:textSize="15sp"
                android:textStyle="italic"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:layout_marginBottom="20dp" />

            <!-- Contact Title -->
            <TextView
                android:id="@+id/contactTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact Us"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#FFEB3B"
                android:layout_marginBottom="6dp" />

            <!-- Contact Info -->
            <TextView
                android:id="@+id/contactDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email: sohamfoundation2015@gmail.com\nPhone: +91 77383 56103\nWebsite: www.sohamfoundationngo.org"
                android:autoLink="all"
                android:linksClickable="true"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_marginBottom="20dp"
                android:background="@color/white"/>

        </LinearLayout>
    </ScrollView>

    <!-- Footer Navigation -->
    <include
        layout="@layout/footernav"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_marginBottom="16dp" />
</LinearLayout>
