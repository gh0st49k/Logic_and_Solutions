<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bg1"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="10dp">

        <!-- Profile Picture -->
        <ImageView
            android:background="@drawable/stroketextview"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:src="@drawable/ic_developer"
            android:layout_marginBottom="16dp"
            android:contentDescription="Profile Picture" />

        <!-- Name -->
        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gaurav Ailsinghani"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#1A237E"
            android:layout_marginBottom="8dp" />

        <!-- College -->
        <TextView
            android:id="@+id/tvCollege"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VES Polytechnic, Mumbai"
            android:textSize="18sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- Contact Info Block -->
        <TextView
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/stroketextview"
            android:padding="14dp"
            android:textColor="#000000"
            android:textSize="16sp"
            android:text="📧 Personal Email:  \n gaurav.ailsinghani2000@gmail.com\n🏫 College Email: \n co2023.gaurav.ailsinghani@ves.ac.in\n📞 Phone: 7709667027"
            android:layout_marginBottom="20dp" />

        <!-- GitHub Link -->
        <TextView
            android:id="@+id/tvGithub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🔗 GitHub: github.com/gh0st49k"
            android:autoLink="web"
            android:textSize="16sp"
            android:textColor="#0D47A1"
            android:layout_marginBottom="20dp" />

        <!-- Overall Academic -->
        <TextView
            android:id="@+id/tvPercentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🎓 Overall Percentage (Till 4th Sem): 75.00%"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="#041400"
            android:layout_marginBottom="20dp" />

        <!-- Academic Table -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="📊 Academic Performance:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/stroketextview"
            android:padding="12dp"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="SEM 1: 78.20%\nSEM 2: 75.00%\nSEM 3: 76.40%\nSEM 4: 75.00%" />
    </LinearLayout>
</ScrollView>
