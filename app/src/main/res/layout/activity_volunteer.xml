<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bg1"
    android:orientation="vertical">

    <!-- Scrollable Form -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="12dp">

            <!-- Heading -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Volunteer With Us"
                android:textSize="24sp"
                android:textColor="#1A237E"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <!-- Note about payment -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="To register as a volunteer, please donate â‚¹200 via UPI."
                android:textSize="16sp"
                android:textColor="#D32F2F"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <!-- Name -->
            <EditText
                android:id="@+id/etVolunteerName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Full Name"
                android:background="@drawable/context_et"
                android:padding="12dp"
                android:textColor="#000000"
                android:textColorHint="#888888"
                android:layout_marginBottom="12dp" />

            <!-- Mobile -->
            <EditText
                android:id="@+id/etVolunteerMobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Mobile Number"
                android:inputType="phone"
                android:background="@drawable/context_et"
                android:padding="12dp"
                android:textColor="#000000"
                android:textColorHint="#888888"
                android:layout_marginBottom="12dp" />

            <!-- Reason -->
            <EditText
                android:id="@+id/etVolunteerReason"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:hint="Why do you want to volunteer?"
                android:gravity="top"
                android:background="@drawable/context_et"
                android:inputType="textMultiLine"
                android:padding="12dp"
                android:textColor="#000000"
                android:textColorHint="#888888"
                android:layout_marginBottom="20dp" />

            <!-- Submit Button -->
            <Button
                android:id="@+id/btnSubmitVolunteer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pay &amp; Register"
                android:backgroundTint="#318A66"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:elevation="4dp"
                android:padding="12dp"
                android:layout_marginTop="8dp" />
        </LinearLayout>
    </ScrollView>

    <!-- Footer Navigation -->
    <include
        layout="@layout/footernav"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_marginBottom="16dp" />

</LinearLayout>
