  <LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_bg1"
    tools:context=".Homeactivity">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/img_1"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="16dp"/>

        <TextView
            android:id="@+id/welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome!"
            android:textSize="22sp"
            android:textStyle="bold"
            android:background="@drawable/stroketextview"
            android:textColor="#1A237E"
            android:fontFamily="sans-serif-medium"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <!-- Fixed ViewFlipper (outside ScrollView) -->


    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:layout_marginTop="90dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Donation Box"
                android:textColor="#FF0000"

                android:textSize="30sp"
                android:textStyle="bold">
                >

            </TextView>
            <TextView
                android:layout_marginTop="12dp"
                android:text="Select Amount Of Donation"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
            <SeekBar

                android:outlineSpotShadowColor="@color/black"
                android:outlineAmbientShadowColor="@color/black"
                android:layout_marginTop="15dp"
                android:max="10000"
                android:id="@+id/amountseekbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            </SeekBar>
            <TextView
                android:id="@+id/selectedAmount"
                android:layout_marginTop="10dp"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text=" 0 â‚¹"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
            <!-- extra text here -->
            <EditText
                android:id="@+id/messageInput"

                android:textColorHint="@color/black"

                android:textColor="@color/black"
                android:layout_marginTop="12dp"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter the cause or message for your donation"
                android:background="@drawable/context_et"
                android:padding="12dp"
                android:textSize="16sp"
                android:inputType="textMultiLine"
                android:minLines="3"
                android:maxLines="5"
                android:gravity="top|start"/>
            <Button
                android:id="@+id/donationbtn"
                android:textColor="@android:color/white"
                android:textSize="16dp"
                android:backgroundTint="#C319AB27"
                android:layout_marginTop="12dp"
                android:textStyle="bold"
                android:text="Donate Now"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                ></Button>
            <TextView
                android:textColor="@color/white"
                android:textSize="10dp"

                android:text="All donations made to Soham Foundation receive exemption\nunder 80G of Indian Income Tax laws."

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

            </TextView>




        </LinearLayout>
    </ScrollView>
    <Button
        android:id="@+id/donationhistory"
        android:textStyle="bold"
        android:textSize="16dp"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/black"
        android:layout_marginLeft="120dp"
        android:text="Donation History"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </Button>
    <!-- Fixed Footer -->
    <include layout="@layout/footernav"
        android:layout_width="match_parent"
        android:layout_height="68dp" />

</LinearLayout>

